# The Shipyard - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# Core URLs
# =============================================================================

# App URL (use localhost for dev, your domain for production)
NEXT_PUBLIC_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# Neynar (Farcaster) - Get keys at https://neynar.com
# =============================================================================

# API key for Farcaster operations
NEYNAR_API_KEY=

# Client ID for webhooks (optional)
NEYNAR_CLIENT_ID=

# Signer UUID for @theshipyard bot casting and notifications
NEYNAR_AGENT_SIGNER_UUID=

# =============================================================================
# Supabase - Get keys at https://supabase.com
# =============================================================================

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=

# Supabase publishable key (safe for client-side)
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=

# =============================================================================
# ShipyardVault Contract (On-Chain Funding)
# =============================================================================

# Chain ID: 8453 for Base Mainnet, 84532 for Base Sepolia (testnet)
NEXT_PUBLIC_CHAIN_ID=8453

# ShipyardVault contract address (client-side)
NEXT_PUBLIC_VAULT_ADDRESS=

# ShipyardVault contract address (server-side, same value)
VAULT_ADDRESS=

# Private key for signing EIP-712 payout/refund claims
# SECURITY: Keep this secret! Generate a dedicated key for signing.
PAYOUT_SIGNER_KEY=

# =============================================================================
# Admin & Security
# =============================================================================

# Comma-separated Farcaster IDs for admin access (e.g., "487460,12345")
ADMIN_FIDS=

# Secret for webhook â†’ ingest API calls
# Generate with: openssl rand -hex 32
INGEST_SECRET=

# =============================================================================
# LLM API Keys (for idea classification)
# =============================================================================

# OpenAI API key (required for categorization)
OPENAI_API_KEY=

# Anthropic API key (optional, not currently used)
ANTHROPIC_API_KEY=

# =============================================================================
# KV Store (Optional - for session/notification storage)
# =============================================================================

# Upstash Redis REST API credentials
KV_REST_API_URL=
KV_REST_API_TOKEN=

# =============================================================================
# Development/Testing Options
# =============================================================================

# Set to "true" to bypass 30-day wait for refunds (testnet only!)
# SKIP_REFUND_DELAY=true

# Pool threshold for race mode (default: 100 USDC)
# RACE_MODE_THRESHOLD=100

# =============================================================================
# Sentry (Error Monitoring)
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=
